{
  "extends": [
    "cooperka/react",
    "cooperka/typescript",
    "plugin:prettier/recommended",
    "prettier/react"
  ],

  "env": {
    "browser": true,
    "jest": true
  },

  "rules": {
    // We can deal with this if there are performance issues;
    // it's easier to write and modify components when things are consistent.
    "react/prefer-stateless-function": "off"
  }
}
