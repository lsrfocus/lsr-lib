{
  "extends": [
    "cooperka/react",
    "plugin:prettier/recommended",
    "prettier/react"
  ],

  "parser": "typescript-eslint-parser",

  "plugins": [
    "typescript"
  ],

  "env": {
    "browser": true,
    "jest": true
  },

  "rules": {
    // We can deal with this if there are performance issues;
    // it's easier to write and modify components when things are consistent.
    "react/prefer-stateless-function": "off",

    // Allow importing devDependencies in tests.
    "import/no-extraneous-dependencies": ["error", {
      "devDependencies": ["**/*.test.{js,jsx,ts,tsx}"]
    }],

    // Require files containing JSX to end in particular extensions.
    "react/jsx-filename-extension": ["error", {
      "extensions": [".js", ".tsx"]
    }],

    // Take over from ESLint.
    "typescript/no-unused-vars": "error",

    // TS will handle this.
    "no-undef": "off"
  }
}
