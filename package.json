{
  "name": "root",
  "private": true,
  "scripts": {
    "prepublish": "lerna run prepublish --stream",
    "watch": "lerna run watch --stream --no-sort",
    "lint": "lerna run lint --stream",
    "flow": "flow",
    "test": "lerna run test --stream",
    "clean": "lerna run clean --stream",
    "clean:hard": "rm -rf node_modules && rm -rf packages/*/node_modules && rm -rf packages/*/lib"
  },
  "workspaces": [
    "packages/*"
  ],
  "devDependencies": {
    "lerna": "3.4.3"
  }
}
